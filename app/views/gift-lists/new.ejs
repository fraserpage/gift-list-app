<form action="/groups/<%= group._id %>/gift-list" method="post">

  <h2>Make a gift list</h2>

  <label for="desc">Description/Note</label>
  <textarea name="desc" id="desc" cols="30" rows="2"></textarea>

  <h4>Add something to it</h4>
  <div id="gifts-form">
    <label for="gift1name">Gift</label>
    <input type="text" name="gifts[1][name]" id="gift1name">
    <label for="gift1note">Note</label>
    <input type="text" name="gifts[1][note]" id="gift1note">
    <label for="gift1link">Link</label>
    <input type="text" name="gifts[1][link]" id="gift1link">  
  </div>
  
  <span id="add-gift">Add another item</span>

  <button type="submit">Lets go</button>
</form>

<script>
  let giftsForm = document.getElementById('gifts-form')
  let numGifts = 1
  document.getElementById('add-gift').addEventListener('click',function(){
    numGifts++
    let newGiftElem = document.createElement('div')
  
    newGiftElem.innerHTML = 
    `<label for="gift${numGifts}name">Gift</label>
    <input type="text" name="gifts[${numGifts}][name]" id="gift${numGifts}name">

    <label for="gift${numGifts}note">Note</label>
    <input type="text" name="gifts[${numGifts}][note]" id="gift${numGifts}note">

    <label for="gift${numGifts}link">Link</label>
    <input type="text" name="gifts[${numGifts}][link]" id="gift${numGifts}link">`

    giftsForm.appendChild(newGiftElem)
  })

</script>