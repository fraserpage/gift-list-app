<%- include('../partials/header') %> 

<% if (groups.length){ %>
  <h2>Your groups</h2>
  <% for (let group of groups) { %> 
    <a href="/groups/<%= group._id %>">
      <h2><%= group.name %></h2>  
      <p><%= group.desc %></p>
      <p>Group members: <%= group.users.map(user => user.name).join(", ") %> </p>
    </a>
<% }
}
else{ %>
  <h2>Looks like you're new here!</h2>
<% } %>


